{% extends 'AppBundle:admin:default.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/dataTables.bootstrap.css') }}" rel="stylesheet">
    <link href="{{ asset('css/responsive.dataTables.css') }}" rel="stylesheet">
{% endblock %}

{% block content %}
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">{{ 'page.name.products'|trans }}</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        {{ 'page.name.products'|trans }}
                    </div>
                    <!-- /.panel-heading -->
                    <div class="panel-body">
                        <div class="dataTable_wrapper">
                            <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                                <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>{{ 'table.products.name'|trans }}</th>
                                    <th>{{ 'table.products.type'|trans }}</th>
                                    <th>{{ 'table.products.qty'|trans }}</th>
                                    <th>{{ 'table.products.price'|trans }}</th>
                                    <th>{{ 'table.products.priceSpecial'|trans }}</th>
                                    <th>{{ 'table.products.rating'|trans }}</th>
                                    <th>{{ 'table.products.available'|trans }}</th>
                                    <th>{{ 'table.products.createdAt'|trans }}</th>
                                </tr>
                                </thead>
                                <tbody>
                                    {% for product in products %}
                                        <tr class="odd gradeX">
                                            <td>{{ product.id }}</td>
                                            <td>{{ product.name }}</td>
                                            <td>{{ product.type }}</td>
                                            <td class="center">{{ product.qty }}</td>
                                            <td class="right">{{ product.price }}</td>
                                            <td class="right">{{ product.priceSpecial }}</td>
                                            <td class="center">{{ product.rating }}</td>
                                            <td class="center">{{ product.available }}</td>
                                            <td>{{ product.createdAt|date("d.m.Y") }}</td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                        <!-- /.table-responsive -->
                        <div class="well">

                        </div>
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/jquery.dataTables.min.js') }}"></script>
    <script src="{{ asset('js/dataTables.bootstrap.min.js') }}"></script>
    <script src="{{ asset('js/dataTables.responsive.js') }}"></script>

    <script>
        $(document).ready(function() {
            $('#dataTables-example').DataTable({
                responsive: true,
                "scrollX": true,
                "language": {
                    "lengthMenu": "{{ 'DataTable.lengthMenu'|trans }}",
                    "zeroRecords": "{{ 'DataTable.zeroRecords'|trans }}",
                    "info": "{{ 'DataTable.info'|trans }}",
                    "infoEmpty": "{{ 'DataTable.infoEmpty'|trans }}",
                    "infoFiltered": "{{ 'DataTable.infoFiltered'|trans }}",
                    "search": "{{ 'DataTable.search'|trans }}",
                    "paginate": {
                        "first": "{{ 'DataTable.paginate.first'|trans }}",
                        "last": "{{ 'DataTable.paginate.last'|trans }}",
                        "next": "{{ 'DataTable.paginate.next'|trans }}",
                        "previous": "{{ 'DataTable.paginate.previous'|trans }}",
                    }
                }
            });
        });
    </script>
{% endblock %}