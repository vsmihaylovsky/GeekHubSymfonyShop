{% extends 'AppBundle:admin:default.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">{{ 'page.name.users'|trans }}</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
                    <div class="dataTable_wrapper">

                        {#<div class="count">#}
                            {#{{ pagination.getTotalItemCount }}#}
                        {#</div>#}

                        <table width="100%" class="table table-striped table-bordered table-hover data-table user-data-table">
                            <thead>
                            <tr>
                                <th class="user-username">
                                    {{ knp_pagination_sortable(pagination, 'table.users.username'|trans, 'u.username') }}
                                </th>
                                <th class="user-email">
                                    {{ knp_pagination_sortable(pagination, 'table.users.email'|trans, 'u.email') }}
                                </th>
                                <th class="user-social_network">
                                    {{ knp_pagination_sortable(pagination, 'table.users.social_network'|trans, ['u.facebook_id', 'u.google_id', 'u.vkontakte_id']) }}
                                </th>
                                <th class="user-roles">
                                    {{ knp_pagination_sortable(pagination, 'table.users.manager'|trans, 'u.roles') }}
                                </th>
                                <th class="user-enabled">
                                    {{ knp_pagination_sortable(pagination, 'table.users.enabled'|trans, 'u.enabled') }}
                                </th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for user in pagination %}
                                <tr>
                                    <td class="user-username">
                                        {{ user.username }}
                                    </td>
                                    <td class="user-email">
                                        {{ user.email }}
                                    </td>
                                    <td class="user-social_network">
                                        {% if user.facebookId %}
                                            <i class="fa fa-facebook"></i>
                                        {% elseif user.googleId %}
                                            <i class="fa fa-google"></i>
                                        {% elseif user.vkontakteId %}
                                            <i class="fa fa-vk"></i>
                                        {% endif %}
                                    </td>
                                    <td class="user-roles">
                                        {% if 'ROLE_SUPER_ADMIN' in user.roles %}
                                            <span class="glyphicon glyphicon-check" aria-hidden="true"></span>
                                        {% elseif 'ROLE_ADMIN' in user.roles %}
                                            <a class="glyphicon glyphicon-check"
                                               href="{{ path('set_user_role', {'id': user.id, 'sort': app.request.get('sort', 'u.id'), 'direction': app.request.get('direction', 'asc'), 'page': app.request.get('page', 1)}) }}"></a>
                                        {% else %}
                                            <a class="glyphicon glyphicon-unchecked"
                                               href="{{ path('set_admin_role', {'id': user.id, 'sort': app.request.get('sort', 'u.id'), 'direction': app.request.get('direction', 'asc'), 'page': app.request.get('page', 1)}) }}"></a>
                                        {% endif %}
                                    </td>
                                    <td class="user-enabled">
                                        {% if 'ROLE_SUPER_ADMIN' in user.roles %}
                                            <span class="glyphicon glyphicon-check" aria-hidden="true"></span>
                                        {% elseif user.enabled %}
                                            <a class="glyphicon glyphicon-check"
                                               href="{{ path('switch_active', {'id': user.id, 'sort': app.request.get('sort', 'u.id'), 'direction': app.request.get('direction', 'asc'), 'page': app.request.get('page', 1)}) }}"></a>
                                        {% else %}
                                            <a class="glyphicon glyphicon-unchecked"
                                               href="{{ path('switch_active', {'id': user.id, 'sort': app.request.get('sort', 'u.id'), 'direction': app.request.get('direction', 'asc'), 'page': app.request.get('page', 1)}) }}"></a>
                                        {% endif %}
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                        <div class="navigation">
                            {{ knp_pagination_render(pagination) }}
                        </div>
                    </div>
    </div>
{% endblock content %}