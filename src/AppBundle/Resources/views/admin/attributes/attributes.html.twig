{% extends 'AppBundle:admin:default.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/dataTables.bootstrap.css') }}" rel="stylesheet">
    <link href="{{ asset('css/responsive.dataTables.css') }}" rel="stylesheet">
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">{{ 'page.name.attributes'|trans }}</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    {{ 'page.name.attributes'|trans }}
                </div>
                <div class="panel-body">
                    <div class="dataTable_wrapper">
                        <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <thead>
                            <tr>
                                <th>Id</th>
                                <th>{{ 'table.attributes.name'|trans }}</th>
                                <th>{{ 'table.attributes.type'|trans }}</th>
                                <th>{{ 'table.attributes.filterable'|trans }}</th>
                            </tr>
                            </thead>
                            <tbody>
                                {% for attribute in attributes %}
                                    <tr class="odd gradeX">
                                        <td>{{ attribute.id }}</td>
                                        <td>{{ attribute.name }}</td>
                                        <td>{{ attribute.type }}</td>
                                        <td>{{ attribute.filterable }}</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <div class="well">

                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/jquery.dataTables.min.js') }}"></script>
    <script src="{{ asset('js/dataTables.bootstrap.min.js') }}"></script>
    <script src="{{ asset('js/dataTables.responsive.js') }}"></script>

    <script>
        $(document).ready(function() {
            $('#dataTables-example').DataTable({
                responsive: true,
                "scrollX": true,
                "language": {
                    "lengthMenu": "{{ 'DataTable.lengthMenu'|trans }}",
                    "zeroRecords": "{{ 'DataTable.zeroRecords'|trans }}",
                    "info": "{{ 'DataTable.info'|trans }}",
                    "infoEmpty": "{{ 'DataTable.infoEmpty'|trans }}",
                    "infoFiltered": "{{ 'DataTable.infoFiltered'|trans }}",
                    "search": "{{ 'DataTable.search'|trans }}",
                    "paginate": {
                        "first": "{{ 'DataTable.paginate.first'|trans }}",
                        "last": "{{ 'DataTable.paginate.last'|trans }}",
                        "next": "{{ 'DataTable.paginate.next'|trans }}",
                        "previous": "{{ 'DataTable.paginate.previous'|trans }}",
                    }
                }
            });
        });
    </script>
{% endblock %}