{% extends 'AppBundle:admin:default.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">{{ 'page.name.newsletter.send'|trans }}</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 send-newsletter-form">
            {% form_theme form 'bootstrap_3_horizontal_layout.html.twig' %}
            {{ form_start(form) }}
            {{ form_errors(form.sendTestEmail) }}
            <div class="pull-left" style="margin: 5px">
                {{ form_widget(form.sendTestEmail) }}
            </div>
            <div class="pull-left" style="margin: 5px">
                {{ form_widget(form.sendTest) }}
            </div>
            <div></div>
            <div class="pull-left" style="margin: 5px; clear: both">
                {{ form_widget(form.send) }}
            </div>
            {{ form_end(form) }}
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">Subject: {{ newsletter.subject }}</div>
                <div class="panel-body">
                    {{ newsletter.message|raw }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}