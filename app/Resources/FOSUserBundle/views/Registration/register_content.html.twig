<form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register">
    {{ form_start(form) }}
    {{ form_errors(form.username) }}
    {{ form_widget(form.username, {'attr': {'placeholder': 'security.username'|trans }}) }}
    {{ form_errors(form.email) }}
    {{ form_widget(form.email, {'attr': {'placeholder': 'security.email'|trans }}) }}
    {{ form_errors(form.address) }}
    {{ form_widget(form.address, {'attr': {'placeholder': 'security.address'|trans }}) }}
    {{ form_errors(form.phoneNumber) }}
    {{ form_widget(form.phoneNumber, {'attr': {'placeholder': 'security.phone_number'|trans }}) }}
    <span>
        {{ form_row(form.subscribe, {'label': 'security.subscribe'|trans }) }}
    </span>
    {{ form_errors(form.plainPassword.first) }}
    {{ form_widget(form.plainPassword.first, {'attr': {'placeholder': 'security.password'|trans }}) }}
    {{ form_errors(form.plainPassword.second) }}
    {{ form_widget(form.plainPassword.second, {'attr': {'placeholder': 'security.password_confirmation'|trans }}) }}
    <button type="submit" id="_submit" name="_submit" class="btn btn-default">{{ 'registration.submit'|trans({}, 'FOSUserBundle') }}</button>
    {{ form_end(form) }}
</form>
