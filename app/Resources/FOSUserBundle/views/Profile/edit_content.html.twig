<section id="form"><!--form-->
    <div class="shop-form">
        <form action="{{ path('fos_user_profile_edit') }}" {{ form_enctype(form) }} method="POST"
              class="fos_user_profile_edit">
            {{ form_row(form.username) }}
            {{ form_row(form.email) }}
            {{ form_row(form.phoneNumber) }}
            {{ form_row(form.current_password) }}
            {{ form_widget(form._token) }}
            <button type="submit" id="_submit" name="_submit"
                    class="btn btn-default">{{ 'profile.edit.submit'|trans({}, 'FOSUserBundle') }}
            </button>
        </form>
    </div>
</section>